        app:layout_constraintBottom_toBottomOf="@+id/choiceBackground2"
        app:layout_constraintEnd_toEndOf="@+id/choiceBackground2"
        app:layout_constraintStart_toStartOf="@+id/choiceBackground2"
        app:layout_constraintTop_toTopOf="@+id/choiceBackground2" />

    <ImageView
        android:id="@+id/choiceBackground3"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
